<!--pages/register.wxml-->
<van-tree-select
  items="{{ items }}"
  main-active-index="{{ mainActiveIndex }}"
  active-id="{{ activeId }}"
  height = "500"
  bind:click-nav="onClickNav"
  bind:click-item="onClickItem"
  style="height: max-content;"
/>

<!-- <van-cell title="展示弹出层" is-link bind:click="showPopup" /> -->
<van-popup show="{{ show }}" 
bind:close="onClose"
position="bottom">
  <van-datetime-picker
  type="date"
  value="{{ currentDate }}"
  bind:confirm="onInput"
  min-date="{{ minDate }}"
  formatter="{{ formatter }}"
  />
</van-popup>


