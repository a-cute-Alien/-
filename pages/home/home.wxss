/* 公告 */
.notice {
    margin-top: 10rpx;
    display: flex;
    align-content: center;
    justify-content: space-between;
    padding: 10rpx 25rpx;
    background: #ffffff;
    border-radius: 20rpx;
}
.icon{
    width: 40rpx;
    height: 40rpx;
}
.notice-box {
    position: relative;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
   }
    
.left-text {
    position: absolute;
    left: 0;
    width: 40rpx;
    height: 100%;
    background: linear-gradient(to left,rgba(241,241,241,0),rgb(255, 255, 255));
    z-index: 99;
}
    
.right-text {
    position: absolute;
    right: 0rpx;
    width: 40rpx;
    height: 100%;
    background: linear-gradient(to left,rgb(255, 255, 255),rgba(241,241,241,0));
    z-index: 99;
}  
.content-box {
    overflow: hidden;
    width: 580rpx;
   }
.content-text {
    color: red;
    white-space: nowrap;
    font-size: 30rpx;
}  
 

